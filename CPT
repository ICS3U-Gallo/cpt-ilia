            net_down = False


    if net_down == True:
            net_y -= 10
    elif net_down == False:





def on_draw():
    global net_x
    global net_y
    arcade.start_render()
    # Draw in here...

    arcade.draw_circle_filled(net_x, net_y, 25, arcade.color.BLUE)


def on_key_press(key, modifiers):
    pass


def on_key_release(key, modifiers):
    pass


def on_mouse_press(x, y, button, modifiers):
    pass


if __name__ == '__main__':
    setup()
    arcade.start_render()
    # Draw in here...

    arcade.draw_circle_filled(net_x, net_y, 25, arcade.color.BLUE)


def on_key_press(key, modifiers):
    pass


def on_key_release(key, modifiers):
    pass


def on_mouse_press(x, y, button, modifiers):
    pass


if __name__ == '__main__':
    setup()
