import arcade
import os
import math

WIDTH = 640
HEIGHT = 480

#net
net_x = 0
net_y = HEIGHT * 5/6

net_right = False
net_left = False
net_up = False
net_down = False

#Ball
ball_x = 320
ball_y = 150

#Aim
aim_x = 320
aim_y = 250
aim_right = False
aim_left = False
show_aim = True

#Shoot
shoot_ball = False


def setup():
    arcade.open_window(WIDTH, HEIGHT, "My Arcade Game")
    arcade.set_background_color(arcade.color.WHITE)
    arcade.schedule(update, 1/60)

    # Override arcade window methods
    window = arcade.get_window()
    window.on_draw = on_draw
    window.on_key_press = on_key_press
    window.on_key_release = on_key_release
    window.on_mouse_press = on_mouse_press

    arcade.run()


def update(delta_time):
    global WIDTH, HEIGHT
    global net_right, net_left, net_up, net_down
    global net_y, net_x
    global ball_x, ball_y
    global aim_x, aim_y
    global aim_right, aim_right
    global shoot_ball
    global show_aim

    # net movement
    if net_x == 0:
            net_right = True
            net_left = False
            net_down = False
            net_up = False
    elif net_x == WIDTH:
            net_right = False
            net_left = True
            net_down = False
            net_up = False


    if net_right == True:
            net_x += 10
    elif net_left ==  True:
            net_x -= 10

    if net_down == True:
            net_y -= 10
    elif net_up == True:
        net_y += 10

#Ball Shoot
    if shoot_ball == True:
        '''
        x_diff = ball_x - aim_x
        y_diff = ball_y - aim_y
        angle = math.atan2(y_diff, x_diff)
        ball_x = math.cos(angle) * 10
        ball_y = math.sin(angle) * 10
        '''
        ball_y += 10
        
        show_aim = False

#Aim

    if aim_left == True:
            aim_x -= 5
    elif aim_right == True:
            aim_x += 5


def on_draw():
    global net_x, net_y
    global ball_x, ball_y
    global aim_x, aim_y
    global show_aim

    arcade.start_render()
    # Draw in here...

#net
    arcade.draw_circle_filled(net_x, net_y, 50, arcade.color.BLUE)
#aim
    if show_aim == True:
            arcade.draw_line(320, 150, aim_x, aim_y, arcade.color.BLACK)
#ball
    arcade.draw_circle_filled(ball_x, ball_y, 25, arcade.color.ORANGE)


def on_key_press(key, modifiers):
    global aim_left, aim_right
    global shoot_ball

    if key == arcade.key.LEFT:
            aim_left = True
    elif key == arcade.key.RIGHT:
            aim_right = True

    if key == arcade.key.SPACE:
            shoot_ball = True


def on_key_release(key, modifiers):
    global aim_left, aim_right

    if key == arcade.key.LEFT:
            aim_left = False
    if key == arcade.key.RIGHT:
            aim_right = False

def on_mouse_press(x, y, button, modifiers):
    pass


if __name__ == '__main__':
    setup()
